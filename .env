# Application title
APP_TITLE = Follower Bot

# GitHub token for authentication (need user:follow permission)
# GITHUB_TOKEN = <your_github_token>

# Banner file path
BANNER_FILE = banner.txt

# Loguru configuration file path
LOGURU_CONFIG_FILE = loguru.yaml

# Interval between job runs in seconds (>= 3600)
# 4 hours
JOB_INTERVAL = 14400

# Jitter for job interval in seconds (>= 0)
# 2 hour
JOB_JITTER = 7200

# Base number of users to follow per job run (1-30)
JOB_FOLLOW_USER_BASE = 20

# Jitter for number of users to follow in job run (0-10)
JOB_FOLLOW_USER_JITTER = 5

# Run job immediately (true)
# JOB_RUN_NOW = false

# Maximum number of users to follow (>= 1) (None for unlimited)
# FOLLOW_USER_MAX = 100000

# Number of users to fetch per page (1-100)
SEARCH_USERS_PER_PAGE = 100

# Search query for GitHub API
# https://docs.github.com/en/search-github/searching-on-github/searching-users
SEARCH_QUERY = "followers:>100 repos:>2"

# Database URL
DATABASE_URL = sqlite:///data/follower-bot.db
# rye add pymysql
# DATABASE_URL = mysql+pymysql://username:password@localhost/follower_bot

# Database log level
DATABASE_LOG_LEVEL = DEBUG
